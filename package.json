{
  "name": "playwright-e2e-tests",
  "version": "1.0.0",
  "description": "Welcome to the frontend web tests based on playwright",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.2",
    "dotenv": "^16.6.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "docker:run:container": "docker run --name fashionhub-demo -d -p 4000:4000 pocketaces2/fashionhub-demo-app",
    "docker:stop:container": "docker stop fashionhub-demo || true",
    "docker:remove:container": "docker rm -f fashionhub-demo || true",
    "test:run:local": "npx playwright test --config=playwright_local_config.ts",
    "test:local": "npm-run-all --sequential --continue-on-error docker:run:container test:run:local docker:stop:container docker:remove:container",
    "test:stg": "npx playwright test --config=playwright_stg_config.ts --reporter=html,list",
    "test:prod": "npx playwright test --config=playwright_prod_config.ts --reporter=html,list"
  }
}
